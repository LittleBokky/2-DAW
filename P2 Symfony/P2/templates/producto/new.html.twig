{% extends 'base.html.twig' %}

{% block title %}New Producto{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 50px;
        }

        .btn-container {
            margin-top: 20px;
        }

        .btn-container a {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Crear nuevo producto</h1>

        {{ include('producto/_form.html.twig') }}

        <div class="btn-container">
            <a href="{{ path('app_producto_index') }}" class="btn btn-primary">Back to list</a>
        </div>
    </div>
{% endblock %}
